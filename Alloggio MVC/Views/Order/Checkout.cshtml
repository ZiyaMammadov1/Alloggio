<form asp-action="checkout" method="post">

    <div class="billing">
        <div class="billing_detailsLeft">
            <div class="billing_name">
                Billing details
            </div>

            <div class="billing_group">
                <div class="billing_inputHeader">
                    Full name ..*
                </div>
                <div class="billing_inputs">
                    <input type="text" asp-for="FullName" placeholder="First name" class="billing_input">
                </div>
            </div>

          


            <div class="billing_group">
                <div class="billing_inputHeader">
                    Phone ..*
                </div>
                <div class="billing_inputs">
                    <input type="text" asp-for="Phone" placeholder="Phone" class="billing_input">
                </div>
            </div>

            <div class="billing_group">
                <div class="billing_inputHeader">
                    Email ..*
                </div>
                <div class="billing_inputs">
                    <input type="text" asp-for="Email" placeholder="Email address" class="billing_input">
                </div>
            </div>

        </div>
        <div class="billing_detailsRight">
            <div class="billing_name">
                Additional information
            </div>

            <div class="billing_group">
                <div class="billing_inputHeader">
                    Order notes (optional)
                </div>
                <div class="billing_inputs">
                    <textarea id="" cols="30" rows="10" asp-for="Note" class="billing_input billing_textarea"></textarea>
                </div>
            </div>
        </div>
        <div asp-validation-summary="ModelOnly"></div>
    </div>
    <div class="billing_btnOrder">
        <button type="submit" class="billing_Orderbtn">Place Order</button>
    </div>
</form>
<!-- Billing detail end -->