
@{
    ViewData["Title"] = "Checkout";
}
@model Order
<!-- Check header begin -->
<div class="outHeader">
    <div class="outHeader_checkout">
        Checkout
    </div>
</div>
<!-- Check header end -->
<!-- Billing detail begin -->

