
@{
    ViewData["Title"] = "Register";
}
@model MemberRegisterViewModel 
<!-- Check header begin -->
<div class="outHeader">
    <div class="outHeader_checkout">
        Register
    </div>
</div>
<!-- Check header end -->
<!-- Register begin -->
<div class="register">
    <form asp-action="register" method="post" enctype="multipart/form-data">
        <div class="register_group">
            <div class="register_groupName">
                Fullname *
            </div>
            <div class="register_groupInput">
                <input type="text" class="register_input" asp-for="Fullname">
                <span asp-validation-for="Fullname" class="text-danger"></span>
            </div>
        </div>
        <div class="register_group">
            <div class="register_groupName">
                Username *
            </div>
            <div class="register_groupInput">
                <input type="text" class="register_input" asp-for="Username">
                <span asp-validation-for="Username" class="text-danger"></span>

            </div>
        </div>


        <div class="register_group">
            <div class="register_groupName">
                Email *
            </div>
            <div class="register_groupInput">
                <input type="text" class="register_input" asp-for="Email">
                <span asp-validation-for="Email" class="text-danger"></span>

            </div>
        </div>

        <div class="register_group">
            <div class="register_groupName">
                Phone *
            </div>
            <div class="register_groupInput">
                <input type="text" class="register_input" asp-for="Phone">
                <span asp-validation-for="Phone" class="text-danger"></span>

            </div>
        </div>

        <div class="register_group">
            <div class="register_groupName">
                Password *
            </div>
            <div class="register_groupInput">
                <input type="password" class="register_input" asp-for="Password">
                <span asp-validation-for="Password" class="text-danger"></span>

            </div>
        </div>

        <div class="register_group">
            <div class="register_groupName">
                Confirm Password *
            </div>
            <div class="register_groupInput">
                <input type="password" class="register_input" asp-for="ConfirmPassword">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

            </div>
        </div>

        <div class="register_group">
            <div class="register_groupName">
                Image *
            </div>
            <div class="register_groupInput">
                <input class="form-control register_input" type="file" asp-for="UploadImage" style="border: 1px solid gray;">
                <span asp-validation-for="UploadImage" class="text-danger"></span>

            </div>
        </div>


        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="register_group">
            <div class="register_button">
                <button type="submit" class="register_link">Register</button>
            </div>
        </div>
    </form>

</div>
<!-- Register end -->