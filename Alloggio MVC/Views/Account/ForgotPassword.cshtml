
@{
    ViewData["Title"] = "ForgotPassword";
}
@model ForgotPasswordViewModel
<!-- Check header begin -->
<div class="outHeader">
    <div class="outHeader_checkout">
        Forgot Password
    </div>
</div>
<!-- Check header end -->
<!-- Login begin -->
<div class="login">
    <form action="ForgotPassword" method="post">
        <div class="register_group">
            <div class="register_groupName">
                Email
            </div>
            <div class="register_groupInput">
                <input type="text" class="register_input" asp-for="Email">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
        </div>


        <div class="register_group">
            <div class="register_button">
                <button type="submit" class="register_link">Send email</button>
            </div>
        </div>
    </form>

</div>
<!-- Login end -->