<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Allogio - Hotel Booking</title>

    <!-- favicon begin -->
    <link rel="icon" type="image/x-icon" href="/assets/image/favicon/cropped-favicon-32x32.png">
    <link rel="icon" type="image/x-icon" href="/assets/image/favicon/cropped-favicon-180x180.png">
    <link rel="icon" type="image/x-icon" href="/assets/image/favicon/cropped-favicon-192x192.png">
    <!-- favicon end -->
    <!-- grid begin -->
    <link rel="stylesheet" href="~/assets/css/grid.css">
    <!-- grid end -->
    <!-- font awesome begin -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <!-- font awesome end -->
    <!-- bootstrap begin -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    @*<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>*@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
    <!-- bootstrap end -->
    <!-- jQuery begin -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js " defer></script>
    <!-- jQuery end -->
    <!-- Flat  begin -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flatpickr/4.6.9/flatpickr.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flatpickr/4.6.9/flatpickr.min.js" defer></script>
    <!-- Flat  end -->
    <!-- Owl Carousel begin -->
    <link rel="stylesheet" href="~/assets/OwlCarousel2-2.3.4/dist/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="~/assets/OwlCarousel2-2.3.4/dist/assets/owl.theme.default.min.css">
    <script src="~/assets/OwlCarousel2-2.3.4/dist/owl.carousel.min.js" defer></script>
    <!-- Owl Carousel end -->

    <!--Toaster begin-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" integrity="sha512-vKMx8UnXk60zUwyUnUPM3HbQo8QfmNx7+ltw8Pm5zLusl1XIfwcxo8DbWCqMGKaWeNxWA8yrx5v3SaVpMvR3CA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" integrity="sha512-VEd+nq25CkR676O+pLBnDW09R7VQX9Mdiij052gVCp5yVH3jGtH70Ho/UUv4mJDsEdTvqRCFZg0NKGiojGnUCw==" crossorigin="anonymous" referrerpolicy="no-referrer" defer></script>

    <!--Toaster end-->
    <!-- main css begin -->
    <link rel="stylesheet" href="~/assets/css/main.css">
    <!-- main css end -->
    <!-- script begin -->
    <script src="~/assets/js/script.js" defer></script>
    <!-- script end -->
    <!-- Google font begin -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@100;200;300;352;400&display=swap"
          rel="stylesheet">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;1,300;1,400&display=swap"
          rel="stylesheet">
    <!-- Google font end -->



</head>

<body>
    @if (TempData["success"] != null)
    {
        <input type="hidden" id="success-toaster" value="@TempData["Success"]" />
    }
    <!-- Header second begin -->
    <header class="headerSecond">
        <div class="header-inner">
            <a asp-controller="home" asp-action="index" class="header-inner_logoWrap">
                <img class="header-inner_logo" src="~/assets/image/header logo/logo.png" alt="">
            </a>

            <nav class="header-inner_nav">
                <ul class="header-inner_menu">
                    <li class="header-inner_menu-item">
                        <a class="header-inner_menu-item-link" asp-controller="home" asp-action="index">HOME</a>
                    </li>
                    <li class="header-inner_menu-item">
                        <a class="header-inner_menu-item-link" asp-controller="room" asp-action="index">ROOMS</a>
                    </li>
                    <li class="header-inner_menu-item">
                        <a class="header-inner_menu-item-link" asp-controller="home" asp-action="menu">MENUS</a>
                    </li>
                    <li class="header-inner_menu-item">
                        <a class="header-inner_menu-item-link" asp-controller="home" asp-action="gallery">GALLERY</a>
                    </li>
                    <li class="header-inner_menu-item">
                        <a class="header-inner_menu-item-link" asp-controller="blog" asp-action="index">BLOG</a>
                    </li>
                    <li class="header-inner_menu-item">
                        <a class="header-inner_menu-item-link" asp-controller="contact" asp-action="index">CONTACT</a>
                    </li>
                </ul>
            </nav>

            <div class="header-inner_widgets">
                <div class="header-inner_widgets-weather">
                    <div class="header-inner_weathers-icon">
                        @*<i class="fa-solid fa-moon header-inner_weathersIcon"></i>*@
                        <!-- <i class="fa-solid fa-cloud-moon header-inner_weathersIcon"></i>
                        <i class="fa-solid fa-sun header-inner_weathersIcon"></i>
                        <i class="fa-solid fa-cloud-sun header-inner_weathersIcon"></i> -->
                    </div>

                    <div class="header-inner_weather-temperature">
                        @*7
                            <sup>o</sup>
                            C*@
                    </div>
                </div>
                <div class="header-inner_basket">
                    <a class="header-inner_basket-link" asp-controller="order" asp-action="basket">
                        <i class="fa-solid fa-basket-shopping header-inner_basket"></i>
                        (0)
                    </a>

                </div>
                <div class="header-inner_hamburger">
                    <span class="header-inner_hamburgerItem"></span>
                    <span class="header-inner_hamburgerItem"></span>
                    <span class="header-inner_hamburgerItem"></span>
                </div>

            </div>
        </div>
    </header>

    <div class="mobilemenu">
        <div class="mobilemenu_item">
            <a asp-controller="home" asp-action="index" class="mobilemenu_link">Home</a>
        </div>
        <div class="mobilemenu_item">
            <a asp-controller="room" asp-action="index" class="mobilemenu_link">Rooms</a>
        </div>
        <div class="mobilemenu_item">
            <a asp-controller="home" asp-action="menu" class="mobilemenu_link">Menus</a>
        </div>
        <div class="mobilemenu_item">
            <a asp-controller="home" asp-action="gallery" class="mobilemenu_link">Gallery</a>
        </div>
        <div class="mobilemenu_item">
            <a asp-controller="blog" asp-action="index" class="mobilemenu_link">Blog</a>
        </div>
        <div class="mobilemenu_item">
            <a asp-controller="contact" asp-action="index" class="mobilemenu_link">Contact</a>
        </div>
    </div>
    <!-- Header second end -->
    @RenderBody()
    <!-- Footer begin  -->
    <footer>
        <div class="footer-top-area">
            <div class="footer-top-area_inner row">

                <div class="footer-top-area_about col-4">
                    <div class="footer-top-area_aboutHeader">
                        About
                    </div>
                    <div class="footer-top-area_aboutDescription">
                        Welcome to Alloggio, where comfort is everything. Beautiful room presentations, straightforward
                        booking & reservation options, & a whole lot more awaits here.
                    </div>
                    <div class="footer-top-area_aboutPartner">
                        <img src="~/assets/image/partner logo/footer-clients.png" alt="">
                    </div>
                </div>

                <div class="footer-top-area_contact col-3">
                    <div class="footer-top-area_contactHeader">
                        Contact
                    </div>
                    <div class="footer-top-area_contactDescription">
                        <p class="footer-top-area_contactDescriptionItem">
                            A: <a href="#" class="footer-top-area_contactDescriptionLink">
                                Via Venti Settembre, Roma
                            </a>
                        </p>

                        <p class="footer-top-area_contactDescriptionItem">
                            P: <a href="#" class="footer-top-area_contactDescriptionLink">
                                +31 555 777 83
                            </a>
                        </p>

                        <p class="footer-top-area_contactDescriptionItem">
                            App: <a href="#" class="footer-top-area_contactDescriptionLink">
                                Viber, WhatsApp
                            </a>
                        </p>

                        <p class="footer-top-area_contactDescriptionItem">
                            E: <a href="#" class="footer-top-area_contactDescriptionLink">
                                info@allogio.com
                            </a>
                        </p>
                    </div>
                    <div class="footer-top-area_contactShowOnMap">
                        <a href="#" class="footer-top-area_contactShowOnMapLink">
                            SHOW ON MAP +
                        </a>
                    </div>
                </div>

                <div class="footer-top-area_payment col-3">
                    <div class="footer-top-area_paymentHeader">
                        Payment methods
                    </div>
                    <div class="footer-top-area_paymentDescription">
                        Pay any way you choose, we support all payment options.
                    </div>
                    <div class="footer-top-area_paymentMethods">
                        <a href="#" class="footer-top-area_paymentItem">
                            <i class="fa-brands fa-cc-visa footer-top-area_paymentItemLink"></i>
                        </a>

                        <a href="#" class="footer-top-area_paymentItem">
                            <i class="fa-brands fa-cc-paypal footer-top-area_paymentItemLink"></i>
                        </a>

                        <a href="#" class="footer-top-area_paymentItem">
                            <i class="fa-brands fa-cc-mastercard footer-top-area_paymentItemLink"></i>
                        </a>
                    </div>
                </div>

                <div class="footer-top-area_social col-2">
                    <div class="footer-top-area_socialHeader">
                        Get Social
                    </div>
                    <div class="footer-top-area_socialDescription">
                        Follow us on social media and keep in touch with Alloggio.
                    </div>
                    <div class="footer-top-area_socialLinks">

                        <a href="" class="footer-top-area_socialLinksItem">
                            <i class="fa-brands fa-facebook-square footer-top-area_socialItemLink"></i>
                        </a>

                        <a href="" class="footer-top-area_socialLinksItem">
                            <i class="fa-brands fa-twitter-square footer-top-area_socialItemLink"></i>
                        </a>

                        <a href="" class="footer-top-area_socialLinksItem">
                            <i class="fa-brands fa-instagram-square footer-top-area_socialItemLink"></i>
                        </a>

                    </div>
                </div>

            </div>
        </div>
        <div class="footer-bottom-area">
            <div class="footer-bottom-area_bottomInner">
                <p class="footer-bottom-area_copyright">
                    © Copyright Code Interactive
                </p>
            </div>
        </div>
    </footer>
    <!-- Footer end -->

    <div class="backToTop" id="BackToTop">
        <div class="backToTop_Inner">
            <i class="fa-solid fa-chevron-up backToTop_icon"></i>
            <div class="backToTop_frameInner">
            </div>
        </div>
    </div>


</body>
</html>

<style>
    .validation-summary-errors ul li {
        font-family: 'Cormorant Garamond', serif;
        font-size:22px;
        padding: 5px 0;
    }
    span.text-danger {
        font-family: 'Cormorant Garamond', serif;
        font-size: 22px;
        font-weight:400;
        padding: 5px 10px;
    }
</style>