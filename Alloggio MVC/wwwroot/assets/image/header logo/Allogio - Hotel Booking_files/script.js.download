// Back To Top Begin
$(document).ready(function () {
  $(window).scroll(function () {
    if ($(this).scrollTop() > 40) {
      $("#BackToTop").fadeIn();
    } else {
      $("#BackToTop").fadeOut();
    }
  });

  $("#BackToTop").click(function () {
    $("html, body").animate({ scrollTop: 0 }, 0);
  });
});

// Back To Top End

