@model List<Order>
<div class="grid-margin stretch-card" style="width:95%; height:90%; margin: 0 auto; ">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title" style="font-size:30px;">Order Table</h4>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Fullname</th>
                            <th>Email</th>
                            <th>Note</th>
                            <th>Phone</th>
                            <th>Create at</th>
                            <th>Modified at</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count != 0)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.FullName</td>
                                    <td>@item.Email</td>
                                    <td>@item.Note</td>
                                    <td>@item.Phone</td>
                                    <td>@item.CreateAt</td>
                                    <td>@item.ModifiedAt</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <td></td>
                            <td></td>
                            <td></td>
                            <td>Empty</td>
                            <td></td>
                            <td></td>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


