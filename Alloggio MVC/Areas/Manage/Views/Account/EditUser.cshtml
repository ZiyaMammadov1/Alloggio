
@model AppUser

<div class=" grid-margin stretch-card" style="width:50%; margin: 0 auto;">
    <div class="card">
        
        <div class="card-body">

            <form class="forms-sample" asp-action="EditUser" method="post" >
                <div class="form-group">
                    <label for="exampleInputName1">Fullname</label>
                    <input type="text" class="form-control" id="exampleInputName1" asp-for="Fullname">
                    <span class="text-danger" asp-validation-for="Fullname"></span>
                </div>


                <div class="form-group">
                    <label for="exampleInputName1">Phone</label>
                    <input type="number" class="form-control" id="exampleInputName1" asp-for="Phone">
                    <span class="text-danger" asp-validation-for="Phone"></span>
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Email</label>
                    <input type="text" class="form-control" id="exampleInputName1" asp-for="Email">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">IsAdmin</label>
                    <input type="text" class="form-control"asp-for="IsAdmin" disabled>
                    <span class="text-danger" asp-validation-for="IsAdmin" ></span>
                </div>

                 <div class="form-group">
                    <label for="exampleInputName1">New Password</label>
                    <input type="text" class="form-control" id="exampleInputName1" asp-for="Password">
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>

                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button asp-action="GetUser" class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>