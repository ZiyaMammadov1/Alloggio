@model List<Blog>

<div class="grid-margin stretch-card" style="width:95%; height:90%; margin: 0 auto; ">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title" style="font-size:30px;">Blog Table</h4>
            <a class="btn btn-outline-twitter" asp-action="create">Create</a>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <td>Header</td>
                            <td>Content</td>
                            <td></td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="font-size:30px; color: dodgerblue">
                                    <img src="~/assets/image/Blog/Images/@item.Image" alt="Alternate Text" style="width: 150px; height: 100px; border-radius: unset; object-fit:cover" />
                                </td>
                                <td>@item.Header</td>
                                <td>@(item.Content.Length>20?item.Content.Substring(0,19):item.Content)</td>
                                <td><a class="btn btn-outline-warning" asp-action="edit" asp-route-id="@item.id">Update</a></td>
                                <td><a class="btn btn-outline-danger" asp-action="delete" asp-route-id="@item.id">Delete</a></td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


