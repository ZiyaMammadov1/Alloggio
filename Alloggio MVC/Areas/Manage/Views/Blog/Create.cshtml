
@{
    ViewData["Title"] = "Create";
}
@model Blog
<div class=" grid-margin stretch-card" style="width:50%; margin: 0 auto;">
    <div class="card">

        <div class="card-body">

            <form class="forms-sample" asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputName1">Header</label>
                    <input type="text" class="form-control" id="exampleInputName1" asp-for="Header">
                    <span class="text-danger" asp-validation-for="Header"></span>
                </div>


                <div class="form-group">
                    <label for="exampleInputName1">Content</label>
                    <textarea type="text" maxlength="1500" class="form-control" id="exampleInputName1" asp-for="Content" style="height:150px"></textarea>
                    <span class="text-danger" asp-validation-for="Content"></span>
                </div>

           

                <div class="form-group">
                    <label>Image</label>
                    <div class="input-group col-xs-12">
                        <input type="file" class="form-control file-upload-info" asp-for="Photo" placeholder="Panoramic Image">

                    </div>
                    <span class="text-danger" asp-validation-for="Photo"></span>
                </div>

                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button asp-action="index" class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>