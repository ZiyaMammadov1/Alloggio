@model List<Setting>

<div class="grid-margin stretch-card" style="width:95%; height:90%; margin: 0 auto; ">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title" style="font-size:30px;">Setting Table</h4>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th style="width:30%">Key</th>
                            <td style="width:50%">Value</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Key
                                </td>
                                   <td>
                                    @(item.Value.Length>100?item.Value.Substring(0,99):item.Value)
                                </td>
                                <td><a class="btn btn-outline-warning" asp-action="edit" asp-route-key="@item.Key">Update</a></td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


