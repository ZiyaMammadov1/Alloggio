<!DOCTYPE html>
<html lang="en">
@inject AdminLayoutService AdminLayoutService
@{
    var message = AdminLayoutService.GetMessage();
}

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>RoyalUI Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/manage/assets/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/manage/assets/vendors/base/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/manage/assets/css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/manage/assets/images/favicon.png" />

    <!-- font awesome begin -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <!-- font awesome end -->


</head>
<body>
    <div class="container-scroller">

        <!-- partial:partials/_navbar.html -->
        <nav class="navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
                <a class="navbar-brand brand-logo me-5" asp-action="index"><img src="~/assets/image/header logo/logo.png" class="me-2" alt="logo" /></a>
                <a class="navbar-brand brand-logo-mini" asp-action="index"><img src="~/assets/image/Central Logo/logo-light.png" alt="logo" /></a>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-center justify-content-end">
                <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                    <span class="ti-view-list"></span>
                </button>
                <ul class="navbar-nav navbar-nav-right">


                    <li class="nav-item dropdown me-1">
                        @Html.Partial("_messagesPartialView", message)


                        <div class="dropdown-menu dropdown-menu-right navbar-dropdown" aria-labelledby="messageDropdown">
                            <p class="mb-0 font-weight-normal float-left dropdown-header">Messages </p>
                            @if (message.Count == 0)
                            {


                                <a class="dropdown-item">
                                    <div class="item-thumbnail">

                                    </div>
                                    <div class="item-content flex-grow">
                                        <h6 class="ellipsis font-weight-normal">
                                            Inbox Empty
                                        </h6>
                                        <p class="font-weight-light small-text text-muted mb-0">

                                        </p>
                                    </div>
                                </a>
                            }
                            else
                            {
                                @foreach (var item in message)
                                {
                                    <a class="dropdown-item" asp-area="manage" asp-controller="Layout" asp-action="MessageSetIsWriting" asp-route-id="@item.id">

                                        <div class="item-content flex-grow">
                                            <p class="item-thumbnail">
                                                @item.FullName
                                            </p>
                                            <h6 class="ellipsis font-weight-normal">
                                                @item.Email
                                            </h6>
                                            <p class="font-weight-light small-text text-muted mb-0">
                                                @item.Content
                                            </p>
                                        </div>
                                    </a>
                                }

                            }



                        </div>
                    </li>





                    <li class="nav-item nav-profile dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown" id="profileDropdown" aria-expanded="false">
                            <i class="ti-settings" style="font-size:20px;"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right navbar-dropdown" aria-labelledby="profileDropdown">

                            <a class="dropdown-item" asp-controller="dashboard" asp-action="logout">
                                <i class="ti-power-off text-primary"></i>
                                Logout
                            </a>
                        </div>
                    </li>


                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                    <span class="ti-view-list"></span>
                </button>
            </div>
        </nav>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper" style="background-color: #DDDCE1; ">
            <!-- partial:partials/_sidebar.html -->
            <nav class="sidebar sidebar-offcanvas" id="sidebar" style="border-right: 1px solid gray; box-shadow: 0px 0px 15px 1px;">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="manage" asp-controller="dashboard" asp-action="index">
                            <i class="ti-panel menu-icon"></i>
                            <span class="menu-title">Dashboard</span>
                        </a>
                    </li>

                     <li class="nav-item">
                        <a class="nav-link" asp-area="manage" asp-controller="Account" asp-action="getUser">
                            <i class="ti-user menu-icon"></i>
                            <span class="menu-title">Users</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-area="manage" asp-controller="slider" asp-action="index">
                            <i class="ti-layers-alt menu-icon"></i>
                            <span class="menu-title">Slider</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="manage" asp-controller="room" asp-action="index">
                            <i class="ti-home menu-icon"></i>
                            <span class="menu-title">Rooms</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="manage" asp-controller="amenities" asp-action="index">
                            <i class="ti-help menu-icon"></i>
                            <span class="menu-title">Amenities</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="manage" asp-controller="order" asp-action="index">
                            <i class="ti-shopping-cart menu-icon"></i>
                            <span class="menu-title">Orders</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="manage" asp-controller="cooking" asp-action="index">
                            <i class="ti-pie-chart menu-icon"></i>
                            <span class="menu-title">Cooking</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="manage" asp-controller="gallery" asp-action="index">
                            <i class="ti-gallery menu-icon"></i>
                            <span class="menu-title">Gallery</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="manage" asp-controller="blog" asp-action="index">
                            <i class="ti-comment menu-icon"></i>
                            <span class="menu-title">Blog</span>
                        </a>
                    </li>
                         <li class="nav-item">
                        <a class="nav-link" asp-area="manage" asp-controller="setting" asp-action="index">
                            <i class="ti-settings menu-icon"></i>
                            <span class="menu-title">Setting</span>
                        </a>
                    </li>

                </ul>
            </nav>
            @RenderBody()
        </div>
        <!-- page-body-wrapper ends -->
    </div>


    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/manage/assets/vendors/base/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page-->
    <script src="~/manage/assets/vendors/chart.js/Chart.min.js"></script>
    <script src="~/manage/assets/js/jquery.cookie.js" type="text/javascript"></script>
    <!-- End plugin js for this page-->
    <!-- inject:js -->
    <script src="~/manage/assets/js/off-canvas.js"></script>
    <script src="~/manage/assets/js/hoverable-collapse.js"></script>
    <script src="~/manage/assets/js/template.js"></script>
    <script src="~/manage/assets/js/todolist.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page-->
    <script src="~/manage/assets/js/dashboard.js"></script>
    <!-- End custom js for this page-->
</body>

</html>

