@model List<OrderRooms>
<div class="grid-margin stretch-card" style="width:80%; height:90%; margin: 0 auto; ">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title" style="font-size:30px;">Order Table</h4>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Check In</th>
                            <th>Check Out</th>
                            <th>Count</th>
                            <th>Price</th>
                            <th>Adult</th>
                            <th>Children</th>
                            <th>Infant</th>
                            <th>Deleted</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tbody>
                            <tr>
                                <td>
                                    @item.CheckIn.ToShortDateString()
                                </td>
                                <td>
                                    @item.CheckOut.ToShortDateString()
                                </td>
                                <td>
                                    @item.Count
                                </td>
                                <td>
                                    @item.Price
                                </td>
                                <td>
                                    @item.Adult
                                </td>
                                <td>
                                    @item.Children
                                </td>
                                <td>
                                    @item.Infant
                                </td>
                                <td>
                                    @item.IsDeleted
                                </td>
                                @if (ViewBag.deleted != true)
                                {
                                    <td><a class="btn btn-outline-warning" asp-action="editOrderRoom" asp-route-id="@item.id">Edit</a></td>
                                    <td><a class="btn btn-outline-danger" asp-action="deleteOrderRoom" asp-route-id="@item.id">Delete</a></td>
                                }
                            </tr>
                        </tbody>


                    }
                </table>
            </div>
        </div>
    </div>
</div>


