
@{
    ViewData["Title"] = "Create";
}
@model Order
<div class=" grid-margin stretch-card" style="width:50%; margin: 0 auto;">
    <div class="card">

        <div class="card-body">

            <form class="forms-sample" asp-action="editOrder" method="post">

                <div class="form-group">
                    <label for="exampleInputName1">Fullname</label>
                    <input type="text" class="form-control"  asp-for="FullName" />
                    <span class="text-danger" asp-validation-for="FullName"></span>
                </div>


                <div class="form-group">
                    <label for="exampleInputName1">Email</label>
                    <input type="text" class="form-control"asp-for="Email" />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>


                <div class="form-group">
                    <label for="exampleInputName1">Phone</label>
                    <input type="number" class="form-control"  asp-for="Phone" />
                    <span class="text-danger" asp-validation-for="Phone"></span>
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Total Price</label>
                    <input type="number" class="form-control" id="exampleInputName1" asp-for="TotalPrice">
                    <span class="text-danger" asp-validation-for="TotalPrice"></span>
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Note</label>
                    <textarea type="text" class="form-control" id="exampleInputName1" asp-for="Note" style=" height:150px;"> </textarea>
                    <span class="text-danger" asp-validation-for="Note"></span>
                </div>



                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button asp-action="index" class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>