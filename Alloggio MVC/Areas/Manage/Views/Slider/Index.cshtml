
@{
    ViewData["Title"] = "Slider";
}
@model List<Slider>
<div class="grid-margin stretch-card" style="width:60%; height:90%; margin: 0 auto; ">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title" style="font-size:30px;">Slider Table</h4>
            <a asp-controller="slider" asp-action="create" class="btn btn-outline-linkedin">Add slider</a>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Photo</th>
                            <th>Header</th>
                            <th>Update</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
	                    {
                            <tr>
                                <td>
                                    <img src="~/assets/image/slider/@item.Image" alt="Alternate Text" style="width:100px; height:50px; border-radius:0;" />
                                </td>
                                <td>@item.Header</td>
                                <td><a class="btn btn-outline-warning" asp-action="edit" asp-route-id="@item.id">Update</a></td>
                                <td><a class="btn btn-outline-danger" asp-action="delete" asp-route-id="@item.id">Delete</a></td>

                            </tr>
	                    }
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


