
@{
    ViewData["Title"] = "Create";
}
@model Slider
<div class=" grid-margin stretch-card" style="width:50%; margin: 0 auto;">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create slider element</h4>

            <form class="forms-sample" asp-action="edit" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputName1">Header</label>
                    <input type="text" class="form-control" id="exampleInputName1" asp-for="Header">
                    <span class="text-danger" asp-validation-for="Header"></span>
                </div>

                <div class="form-group">
                    <label>File upload</label>
                    <div class="input-group col-xs-12">
                        <input type="file" class="form-control file-upload-info" asp-for="ImageFile" placeholder="Upload Image">

                    </div>
                    <span class="text-danger" asp-validation-for="Image"></span>
                </div>

                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button asp-action="index" class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>